echo "ğŸ” Running pre-commit checks..."
echo ""

# â”€â”€ Step 1: lint-staged (ESLint + Prettier on staged files) â”€â”€
echo "ğŸ“ Step 1/2: Linting staged files..."
npx lint-staged
LINT_EXIT_CODE=$?

if [ $LINT_EXIT_CODE -ne 0 ]; then
  echo ""
  echo "âŒ Lint-staged failed. Please fix the errors above and try again."
  echo ""
  exit 1
fi

echo ""
echo "ğŸ§ª Step 2/2: Running related tests..."

FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.ts$' | grep -v '\.spec\.ts$' | grep -v '\.e2e-spec\.ts$' || true)

if [ -z "$FILES" ]; then
  echo "No relevant files changed. Skipping tests."
  exit 0
fi

npx jest --bail --passWithNoTests --findRelatedTests $FILES

TEST_EXIT_CODE=$?

if [ $TEST_EXIT_CODE -ne 0 ]; then
  echo "Tests failed. Aborting commit."
  exit 1
fi

echo ""
echo "âœ… All pre-commit checks passed!"
echo 